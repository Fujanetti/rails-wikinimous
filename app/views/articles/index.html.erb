

<section class="article-list">
  <%= link_to "Create", new_article_path, class: "btn btn-primary" %>
  <ul class>
    <% @articles.each do |article| %>
      <article class="article">
        <li><%= link_to article.title, article_path(id: article.id) %></li>
        <p><%= article.content %></p>
      </article>
    <% end %>
  </ul>
</section>